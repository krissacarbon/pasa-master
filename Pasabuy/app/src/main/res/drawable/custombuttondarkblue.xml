<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#2f6494" />
            <stroke
                android:width="1dp"
                android:color="#222" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:endColor="#FF831515"
                android:startColor="#CCA70A0A"
                android:gradientRadius="300" />
            <stroke
                android:width="2dp"
                android:color="#111" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
</selector>